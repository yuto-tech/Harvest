        <div class="pre-images02">
          <img id="middlepreview">
        </div>
        <div class="face-images">
          <label for="middleicon">
            <span class="face">
            </span>
            <input type="file" name="send00" class="send02" id="middleicon" onchange="previewimage(this);">
          </label>
        </div>
      </div>
      <div class="images-text">
         <div class="balloon-line"><%= fands.explanation %></div>
      </div>
   </div>
  <div class="fot">
    <div class="desition">
    <div id="app">
       <p id="counter">0</p>
       <button type="button" id="increment">+1</button>
    </div>
      <input type="submit" value="支援する" class="desition-button">
    </div>
  </div>
  <div class="comment-room">コメント欄</div>
  </main>
  <aside>
    <div class="Advertisement">広告欄</div>
  </aside>
  <footer></footer>
  <script>
   const state = { count: 0 };
   const btn = document.getElementById('increment');
   btn.addEventListener('click', () => {
     const counter = document.getElementById('counter');
     counter.innerHTML = ++state.count;
    });
    </script>
</body>
