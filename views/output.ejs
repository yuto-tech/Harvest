  <main>
  <div class="main-title">
    <div class="border-only">
      <div class="pre-images">
        <img id="preview">
      </div>
      <div class="main-images">
        <label for="thum">
        <span class='title-images'>
        </span>
        <input name="image" type="file" class="filesend" id="thum" onchange="previewImage(this);">
        </label>
      </div>
    </div>
  </div>

   <div class="target">
    <div class="title"><%= fands.title %></div>
    <div class="flex-2item">
     <div class="support">
      <div class="target-box">
       <h3>視聴回数 : </h3>
       <p>foo</p>
      </div>
